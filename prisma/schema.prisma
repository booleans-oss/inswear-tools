// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model ClientDevis {
    id        String       @id @unique
    createdAt DateTime     @default(now())
    updatedAt DateTime     @updatedAt
    author    User         @relation(fields: [authorId], references: [id])
    authorId  String
    color     String
    items     ClientItem[]
    price     Float
    customer  String
    deadline  DateTime?    @default(now())
    status    String
    margin    Float

    @@index([authorId], name: "authorId")
}

model FournisseurDevis {
    id        String            @id @unique
    createdAt DateTime          @default(now())
    updatedAt DateTime          @updatedAt
    author    User              @relation(fields: [authorId], references: [id])
    authorId  String
    color     String
    items     FournisseurItem[]
    status    String

    @@index([authorId], name: "authorId")
}

model User {
    id               String             @id @default(cuid())
    email            String             @unique
    name             String?
    clientDevis      ClientDevis[]
    fournisseurDevis FournisseurDevis[]
}

model ClientItem {
    id            String      @id @default(cuid())
    createdAt     DateTime    @default(now())
    updatedAt     DateTime    @default(now()) @updatedAt
    reference     String
    name          String
    price         Float
    url           String
    size          String
    color         String
    quantity      Int
    supplierPrice Float
    clientDevis   ClientDevis @relation(fields: [devisId], references: [id])
    devisId       String
    customization String

    @@index([devisId], name: "devisId")
}

model FournisseurItem {
    id               String           @id @default(cuid())
    createdAt        DateTime         @default(now())
    updatedAt        DateTime         @default(now()) @updatedAt
    reference        String
    name             String
    url              String
    size             String
    color            String
    quantity         Int
    fournisseurDevis FournisseurDevis @relation(fields: [devisId], references: [id])
    devisId          String
    customization    String

    @@index([devisId], name: "devisId")
}
